{
  "buildCommand": "npm run build",
  "outputDirectory": "./dist/public",
  "devCommand": "npm run dev",
  "functions": {
    "api/index.ts": {
      "runtime": "nodejs20.x",
      "memory": 1024,
      "maxDuration": 60
    }
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/api"
    }
  ]
}

